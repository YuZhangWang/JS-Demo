/* pages/verify/order_verify.wxss */
.header{
  text-align: center;
  margin-top: 1rpx;
  padding-top: 40rpx;
}
page{
  background: #f5f6f7;
}

.header .logo_img{
  width: 80px;
  height: 80px;
  display: blcok;
  margin: 0 auto 10px;
}
.header .p_txt{
  font-size: 32rpx;
  line-height:60rpx;
  color: #04be02;
  font-weight: bold;
  margin-top: 8rpx;
}

.cont_error .header{
  margin-top: 60rpx;
}
.cont_error .header .p_txt{
  color: #000;
  margin-top: 20rpx;
}

.goods_list{
  padding: 0;
  border-top:solid 4rpx #eee;
}

.order-goods .list {
    list-style-type: none;
    width: 100%;
}

.order-goods .list-item {
    float: left;
    width: 100%;
    height: 176rpx;
    margin: 4rpx 0;
    background-color: #f9f9f9;
}

.order-goods .list-item .icon-goods {
    margin: 27rpx auto auto 16rpx;
    float: left;
    width: 16.3%;
    height: 112rpx;
}

.order-goods .list-item .description {
    float: left;
    max-width: 50%;
    height: 162rpx;
    padding-left: 27rpx;
    font-size: 28rpx;
    list-style-type: none;
}

.order-goods .list-item .description>view {
    position: relative;
    top: 30%;
    bottom: 30%;
    line-height: 40rpx;
}

.order-goods .list-item .amount {
    float: right;
    max-width: 25%;
    margin:50rpx 5% 0% 0;
    font-size: 28rpx;
    color: #7d7d7d;
    text-align: right;
}

.order-goods .total-count {
  height:54rpx;
  clear:both;
  padding:25rpx 25rpx 13rpx 27rpx;
  border-bottom:solid 4rpx #eee;
}

.order-goods .total-count .total {
    max-width: 60%;
    text-align: right;
}

.coupon-item .bill .text-black,.order-goods .total-money {
    line-height: 48rpx;
}
.order-goods .total-money {
    padding: 13rpx 48rpx 13rpx 27rpx;
    border-top: solid 1px #eee;
}

.clerk-detail{
  border-top: 10px solid #f5f6f7;
  padding: 30rpx 50rpx;
}
.clerk-detail .field{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}
.field .title{
  flex: 0 0 180rpx;
  color: #999;
}
.field .name{
  flex: 1;
}


.bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 11;
  width: 100%;

}


.zan-panel{
  border: 0;
}
.detail-item{
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1px solid #e4e4e4;
  padding: 20rpx 50rpx;
  color: #333;
}
.detail-item .user-img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right:10rpx; 
}
.detail-title{
  font-size: 30rpx;

}
.detail-content{
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.detail-content input{
  width: 185rpx;
  text-align: right;
}
.goods-img{
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.goods-name{
  font-size: 26rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;

}
.goods-price{
  font-size: 24rpx;
  color: #999;
}