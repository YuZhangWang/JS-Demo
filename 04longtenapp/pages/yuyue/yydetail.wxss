}
.trigger-left{
  width:25%;
  height:75%;
  vertical-align:middle;
  top:0;
  position:absolute;
  z-index:111112;
  left:0px;
  transform: rotate(180deg);
}
.seeMore{
  position:absolute;
  width:70px;
  height:70px;
  border-radius:50%;
  background:#ccc;
  text-align:center;
  right:-35px;
  top:20%;
  line-height:15px;
