/* orderinfo.wxss */
@import "orderReceive.wxss";
@charset "UTF-8";

page {
    font-size: 28rpx;
    background-color: #f8f8f8;
}

.microshop-box{
    margin-top: 10px;
}

.order-goods {
    border-top: solid 1.6rpx #e0e1e3;
}
.detail-status{
    border-bottom: 0.5px solid rgba(204, 204, 204, 0.33);
    padding: 30rpx;
    background: #fff;
    margin-top: 10rpx;

}
.coupon-item-list{
    background-color: #fff;
    margin-bottom: 20rpx;
}

.coupon-item {
    padding: 22rpx 48rpx 22rpx 0rpx;
    position: relative;
    background-color: #fff;
    border-bottom:solid 1px #eee;
    margin-left: 27rpx;
}
.coupon-item-list .coupon-item:last-child{
    border-bottom: 0!important;
}

.coupon-item .trigger{
    content:"\020";
    display:block;
    width:18px;
    height:18px;
    background-image:url("http://res.xcx.weijuju.com/image/mobile/trigger_right.png");
    background-size:100%;
    position:absolute;
    right:10px;
    top:50%;
    margin-top:-9px;
}

.text-black {
    color: #333;
    font-size: 28rpx;
}

.fright {
     max-width: 60%;
     float: right;
 }

.text-black {
    color: #333;
