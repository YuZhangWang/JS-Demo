.order-goods .enableDepositItem, .order-goods .enablePointsItem{
    padding-right: 22rpx;
}
.order-goods .enableDepositVal, .order-goods .enablePointsVal{
    margin-right: 10rpx;
}
.order-goods .enableDeposit, .order-goods .enablePoints{
    display: flex;
    align-items: center;
