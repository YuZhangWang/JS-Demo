}

.order-btn {
    width: 100%;
    position: fixed;
    bottom: 0;
    z-index: 99;
    display: flex;
    justify-content: flex-end;
    height: 100rpx;
    background-color: #fff !important;
    align-items: center;
}

.bottomRealPay{
    line-height: 102rpx;
    margin-right: 10rpx;
    font-size: 30rpx;
    /* margin-left: 30rpx; */

}

.order-btn .btn-menu {
    width: 32%;
    max-width: 350px;
    height: 100%;
    line-height: 100rpx;
    clear: both;
    background-color: #EA232E;
    color: #fff;
    font-size: 30rpx;
    text-align: center;
    /* margin-top: 10rpx; */
    display: inline-block;
    margin-left: 0;
    margin-right: 0rpx;
    border-radius: 0;

}
