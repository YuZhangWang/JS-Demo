/* pages/multiRepast//orderList.wxss */
.multi-order-panel{
    width: 100%;
    overflow-y: auto;
    background: #F2F2F2;
    font-size: 28rpx;
    height: 100%;
    position: relative;
    padding-bottom: 200rpx;
}
.highlight-font{
    font-size: 30rpx;
    font-weight: bold;
}
.order-status{
    background: #fff;
    padding: 20rpx 30rpx;
    margin-top: 10px;
}
.order-list{
    margin-top: 20rpx;
    padding: 0 30rpx;
    background: #fff;

}
.wechat-info{
    display: flex;
    align-items: center;
    padding: 20rpx 0;
    /*border-top: 1rpx solid rgba(204, 204, 204, 0.33);*/
}
.total-info{
    display: flex;
    align-items: center;
    padding: 15rpx 0;
    justify-content: space-between;
}
.wechat-header{
    width: 60rpx;
    height: 60rpx;
    border-radius: 100%;
}
.wechat-nick{
    margin-left: 10rpx;
    color: #434343
}
.select-count{
    position: absolute;
    right: 30rpx;
    color: #AEAEAE
}
.order-goods-item{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 0;
    border-top: 1rpx solid rgba(204, 204, 204, 0.53);
}
.goods-left-info{
    flex: 1;
    display: flex;
    align-items:stretch;
}
.goods-image{
    width: 112rpx;
    height: 112rpx;
    margin-right: 30rpx;
}
.goods-image image{
    width: 100%;
    height: 100%;
    border-radius: 12rpx
}
.goods-price{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.unit-price{
    color: #FFA04C;
}
.cart-choose-num, .shop-arrow {
    /* margin-right: 9px; */
}
.flex-center {
    display: -webkit-flex;
    display: flex;
    -webkit-align-items: center;
    align-items: center;
    -webkit-justify-content: center;
    justify-content: center;
}
.food-remove2 {
    width: 24px;
    height: 24px;
    /* position: absolute; */
    /* right: 147rpx; */
}
.food-num {
    margin-right: 12rpx;
    margin-left: 15rpx;
    text-align: center;
}
.cart-add-food {
    font-size: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.order-extras-info{
    margin-top: 10px;
    padding:10rpx 30rpx !important;
    background: #fff
}
.order-info-panel{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 0rpx;
    background: #fff;
}
.padding-5{
    padding: 5rpx 0;
}
.padding-15{
    padding: 15rpx auto;
}
.padding-30{
    padding:30rpx !important;
}
.border-top{
    border-top: 1rpx solid rgba(204, 204, 204, 0.33);
}
.order-fee-detail{
    /*margin-bottom: 200rpx;*/
}
.order-handle{
    position: fixed;
    left: 0;
    bottom: 0;
    right: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20rpx 50rpx;
    background: #fff;
}
.order-handle button{
    flex: 1;
}
.text-right{
    text-align: right;
}
.order-add{
    margin-right: 40rpx;
}
.fee-three{
    border-top: 1rpx solid rgba(204, 204, 204, 0.33);
}
.order-pay{

}
.order-animation{
    display: flex;
    position: fixed;
    left: 5px;
    bottom: 80px;
    align-items: center;
    opacity: 0;
    z-index: 9999;
    padding: 5rpx 0;
    background: rgba(99, 99, 99, 0.55);
    border-radius: 30px;
    color: #fff !important;
}
.animation-show{
    animation:bubble 2s ease 1s;
}
.order-animation .animation-image{
    width: 64rpx;
    height: 64rpx;
}
.order-animation .user-headImg{
    width: 64rpx;
    height: 64rpx;
    border-radius: 100%
}
.order-animation .user-nick{
    display: inline-block;
    max-width: 150rpx;
    overflow: hidden;
    white-space:nowrap;
    text-overflow: ellipsis;
    vertical-align: middle
}
@-webkit-keyframes bubble {
    0% {
        bottom: 70px;
        opacity: 1 ;
    }
    20%{
        bottom: 80px;
        opacity: 1 ;
    }
    70% {
        bottom: 80px;
        opacity: 1 ;
    }
    90% {
        bottom: 95px;
        opacity: 0.5 ;
    }
    100%{
        bottom: 108px;
        opacity: 0;
    }
}
@keyframes bubble{
    0% {
        bottom: 70px;
        opacity: 1 ;
    }
    20%{
        bottom: 80px;
        opacity: 1 ;
    }
    70% {
        bottom: 80px;
        opacity: 1 ;
    }
    90% {
        bottom: 95px;
        opacity: 0.5 ;
    }
    100%{
        bottom: 108px;
        opacity: 0;
    }
}
