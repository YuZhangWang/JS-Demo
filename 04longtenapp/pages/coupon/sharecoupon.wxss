/* pages/coupon//sharecoupon.wxss */
.container{
    height: 100%;
}
.zoom{
    width: 100%;
    height: 100%;
    background-color: #F3F3F3;
    background-image: url(http://res.xcx.weijuju.com/image/mobile/coupon/coupon_bg.png);
    font-size: 24rpx;
    background-size:100% 120%;
    background-repeat: no-repeat;
}
.m_header{
    position:relative;
    padding-top:28rpx;
    height:520rpx;
    color:#5b5b5b;
}

.header-bg{
    padding-top:36rpx;
    position:relative;
    width:100%;
    color:#010101;
    text-align:center;
    height:190rpx;
    box-sizing: border-box;
}
.header-bg>.leastCost-tip{
    line-height: 32rpx;
}
.header-bg>p{
    color: #747474;
    font-size: 24rpx;
    line-height: 30rpx;
}
.header-bg .use-limit-rule{
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 82%;
    margin: 0 auto;
}
.title, .money{
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
}

.title{
    padding-top: 92rpx;
    padding-bottom: 20rpx;
    font-size: 30rpx;
}

.money{
    font-size: 90rpx;
    color: #030303;
    line-height: 90rpx;
}
.money.goods-name{
    font-size: 50rpx;
}
.money.goods-name text{
    max-width: 75%;
    overflow: hidden;
    display: inline-block;
    text-overflow: ellipsis;
}
.money.common-name{
    font-size: 40rpx;
}
.money.common-name text{
    max-width: 75%;
    overflow: hidden;
    display: inline-block;
    text-overflow: ellipsis;
}
.money view{
    font-size: 80rpx;
    display: inline-block;
    vertical-align: text-bottom;
}

.div-date{
    text-align: center;
    vertical-align: middle;
}

.use-date, view.line{
    display: inline-block;
}

.nav{
    margin-top: 0px;
}

.a-detail{
    padding:0 30px;
    padding-top:30rpx;
    font-size: 26rpx;
    color: #f4fafa;
    line-height: 28rpx;
}
/*  end:箭头旋转动画样式  */
.lingqu-btn-box{
    padding-top: 12rpx;
    text-align: center;
}

.btn-lingqu{
    border-style:none;
    color:#fff;
    font-size:42rpx;
    width:420rpx;
    height:76rpx;
    border-radius:3px;
    -moz-border-radius:3px;
    -webkit-border-radius:3px;
    background-color:#04bd60;
    margin:0 auto;
    line-height: 76rpx;
}
.btn-lingqu.btn-disabled{
    background-color: #e0e0e0;
}
.backHome {
    margin: 25rpx auto;
    text-align: center;
    width: 120rpx;
}
