/* pages/sbargain/seckillList.wxss */

.secAtySta{
  display: block;
  height: 90rpx;
}
.secAtySta > view{
  width: 50%;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background: #F3F5F4;
  height: 90rpx;
  position: relative;
}
.triangle{
    width:0px;
    height:0px;
    border-top:10px solid #FF2F2F;
    border-right:10px solid  rgba(0,0,0,0);
    border-bottom:10px solid rgba(0,0,0,0);
    border-left:10px solid  rgba(0,0,0,0);
    position: absolute;
    top: 85rpx;
    display: none;
    left: 42%;
}
.secAtyList .secGoodsItem {
  margin-bottom: 20rpx;
  border-radius: 15rpx;
}
.secAtySta .active{
  background: #FE4543;
  color: #fff;
}

.secAtySta .active .triangle{
  display: block;
}

.countdown{
  margin-left: 15rpx;
}
.countdown > text{
  background: #FF4A05;
  color: #fff;
  border-radius: 8rpx;
  margin: 0 5rpx;
  display: inline-flex;
  width: 45rpx;
  height: 45rpx;
  align-items: center;
  justify-content: center;
}



.secWidgetTop{
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
  margin: 0 10rpx;
  border-bottom: 1px #F4F4F4 solid;
}
.secWidgetTop >view{
  display: flex;
  align-items: center;
}
.secWidgetIco{
  width: 50rpx;
  height: 50rpx;
}
.secAtyList .soldOutBtn{
  background: #EEEEEE;
  color: #999999;
}
.secAtyList .raedyBtn{
  background: #999999;
}






