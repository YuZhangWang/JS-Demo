/* pages/fenxiao//privilege.wxss */

.page-panel {
  height: 100%;
  overflow: auto;
  padding: 0;
  margin: 0;
  background: rgba(245, 245, 245, 1);
}

.page-header {
  height: 118rpx;
  flex: none;
  line-height: 88rpx;
  padding-left: 14rpx;
  background-position: center;
  background-repeat: no-repeat;
  background-size: 100% 140%;
  padding-top: 8rpx;
}

.page-header .image-title {
  font-size:32rpx;
  font-family:Source Han Sans CN;
  font-weight:500;
  color:rgba(255,215,158,1);
  /* line-height:21rpx; */
}

.page-body {
  flex: 1;
  margin-top: -25rpx;
  margin-bottom: 33rpx;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
}

.privilege-item {
  display: flex;
}

.privilege-item .column-head, .privilege-item .column-body {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  height: 145rpx;
  white-space: nowrap;
  border-right: 1rpx solid rgba(245, 247, 246, 1);
  border-bottom: 1rpx solid rgba(245, 247, 246, 1);
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  color: rgba(65, 62, 62, 1);
}

.privilege-item .column-head:last-child, .privilege-item .column-body:last-child {
  border-right: none;
}

.column-body .level-image {
  width: 50rpx;
  height: 49rpx;
}

.column-level {
  flex-direction: row !important;
  font-family: Source Han Sans CN;
}

.level-value {
  font-size: 28rpx;
  font-weight: 800;
  font-style: italic;
  color: rgba(210, 168, 76, 1);
}

.privilege-value {
  flex: 1;
  margin-right: 14rpx;
  text-align: right;
}

.level-name {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(65, 62, 62, 1);
}

.privilege-name {
  flex: 1.3;
}

.privilege-item .direct-th, .privilege-item .indirect-th {
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  color: rgba(115, 115, 115, 1);
}

.page-footer {
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #adadad;
  line-height: 42rpx;
  padding: 0 29rpx 33rpx 24rpx;
  display: block;
}

.page-footer text {
  color: #737373;
}
