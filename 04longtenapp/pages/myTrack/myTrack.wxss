/* pages/myTrack/myTrack.wxss */
@import "/youzan/dist/index.wxss";
page{
  background: #f5f7f7 !important;
}
.search-wrapper{
  width: 100%;
  display: flex;
  background: white;
  padding: 10px 0;
}
.search-wrapper .search-input-cont{
  width: 85%;
  margin-left: 20rpx;
}
.operation{
  line-height: 70rpx;
  text-align: center;
  width: 15%;
}
.track-list{
  box-sizing:border-box;
  padding:10rpx;
  width:100%;
  display:-webkit-flex;
  display:-webkit-box;
  display:flex;
  -webkit-flex-wrap:wrap;
  flex-wrap:wrap;

}
.track{
  flex:0 0 50%;
  box-sizing:border-box;
  padding:10rpx;
  position:relative;
  overflow:hidden;
   
}
.track-item{
  box-shadow: 1px 4px 18px 0px rgba(0,5,45,0.01);
  border-radius: 5px;
  height: 100%;
  width: 100%;
  background: white
}
.track-select{
  position: absolute;
  top: 0;
  right: 0;
  background: transparent !important;
}
.track-select view{
  background: transparent !important;
}

.track-goods-img{
  overflow:hidden;
  height:352rpx;
  background-image:url(http://res.xcx.weijuju.com/image/mobile/pic_bg.png);
  background-size:6px 6px;
  border-radius: 5px 5px 0 0;
}
.track .track-goods-img image{
  width: 100%;
  height: 100%;
}
.bottom-tips{
  margin-top: 20px;
  width: 100%;
  text-align: center;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(190,193,194,1);

}
.track-countNum{
  position:relative;
  margin-left: 10px;
  bottom:10rpx;

}
.track-goods-title{
  position:relative;
  font-size:28rpx;
  color:#000000;
  line-height:40rpx;
  height:45rpx;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
  margin-left:15rpx;
  padding-top:5px;

}
.track-goods-price{
  display:block;
  color:#f44;
  font-weight:bold;
  line-height:30px;
  height:30px;
  padding-left:15rpx;

}
.track-goods-buy{
  right:8px;
  bottom:6px;
  width:25px;
  color:#F44;
  font-size:19px;
  z-index:2;
  position:absolute;

}
.track-footer{
  display: flex;
  position:fixed;
  bottom:0rpx;
  width:100%;
  font-size:28rpx;
  background-color:#fff;
  z-index:5;
  height: 50px;
  box-shadow: -2px -2px 2px #f5f5f5;

}
.goods-select #all_select{
  margin-left: 25rpx;
  margin-right: 25rpx;
  margin-top: 15rpx;
}
.goods-select>view.j-select-btn {
    color: #666;
    font-size: 22px;
}

.goods-select view.j-select-btn.selected {
    color: #f44;
}
.del{
  display:inline-block;
  margin:10px 0;
  height:30px;
  padding: 0 20rpx;
  border-radius: 30rpx;
  line-height:30px;
  background: orange;
  color: white;
  position:absolute;
  right:25rpx;

}

