    font-size: 27rpx;
    text-align: center;
    height: 60rpx;
    width: 64rpx;
    border: none;
    outline: none;
    -webkit-appearance: none;
}

view.goods-number view.plus {
     border: 1rpx solid #DDDEE0;
     width: 60rpx;
     height: 60rpx;
     text-align: center;
     line-height: 60rpx;
     font-size: 14px;
     border-radius: 0px 5px 5px 0px;
}

