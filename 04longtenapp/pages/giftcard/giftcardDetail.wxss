    display: flex;
    height: 60rpx;
    width: 64rpx;
    align-items: center;
    justify-content: center;
}

view.goods-number view.minus {
    border: 1rpx solid #DDDEE0;
     width: 60rpx;
     height: 60rpx;
     text-align: center;
     line-height:60rpx;
     font-size: 14px;
     border-radius: 5px 0 0px 5px;
}

