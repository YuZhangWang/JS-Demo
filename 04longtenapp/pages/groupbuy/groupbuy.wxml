        </view>
      </view>
    </swiper-item>
    <!-- 成功 -->
    <swiper-item>
        <view class="my_tuan_list_box">
        <view class="my_tuan_list" >
          <!-- 我的团item -->

          <view class="my_tuan_item_box" wx:for="{{myTuanList}}" wx:key="index">
              <block wx:if="{{item.relationshipDefine.statu===2}}">
                  <view class="my_tuan_item status_{{item.relationshipDefine.statu}} {{(item.isPayed || isNewGb)?'ispayed':''}}" wx:if="{{isNewGb?item.relationshipDefine.statu==2:item.isPayed}}">
                      <view class="order_header">
