                  <span class="tuan_num_box" style="border:1px solid #F95506;">
                <image style='width:32rpx;height:32rpx;' src="{{staticResPath}}/image/user.png"></image>
                <span class="tuanpeopleNum" style="color:#F95506">{{item.award.ecExtend.offeredLimitNum}}人拼</span></span>
                                  <span class="goods_price">{{app.globalData.currencySymbol}}
                      <span>{{mTool.fToY(item.award.ecExtend.activityPrice)}}</span>
                    </span>

                              </view>
                          </view>
                      </view>

                      <view class="order_footer">
                          <view class="order_btn_box">
                              <view class="btn_style_2 tuan_info_btn" data-awardId="{{item.relationshipDefine.awardId}}" data-awardId="{{item.relationshipDefine.awardId}}" data-statu="{{item.relationshipDefine.statu}}" data-reid="{{item.relationshipDefine.relationId}}" bindtap="queryTuanDetail" >拼团详情</view>
                              <view class="btn_style_1 tuan_pay_btn" data-orderno="item.orderNo" data-goodsid="{{item.award.id}}" data-reid="{{item.relationId}}" data-atyid="{{item.relationshipDefine.activityId}}"  wx:if="{{2 == item.relationshipDefine.statu}}" bindtap="goToPayOhterBtn">{{(false == item.isPayed && !isNewGb)?"去支付":"订单详情"}}</view>
                          </view>
                      </view>
                  </view>
              </block>
          </view>
          <!-- 我的团item end -->
        </view>
      </view>
    </swiper-item>
    <swiper-item>
       <view class="my_tuan_list_box">
        <view class="my_tuan_list" >
          <!-- 我的团item -->

          <view class="my_tuan_item_box" wx:for="{{myTuanList}}" wx:key="index">
            <view class="my_tuan_item status_{{item.relationshipDefine.statu}} {{item.isPayed?'ispayed':''}}" wx:if="{{item.isPayed && !item.isSaleOut}}">
              <view class="order_header">
