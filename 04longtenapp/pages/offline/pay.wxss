.zan-panel{
  border: 0;
}
.header{
  text-align: center;
  margin-top: 20px;
}
.header .logo_img{
  width: 190rpx;
  height: 190rpx;
  display: blcok;
  margin: 0 auto 10px;
  border-radius: 100%;
}
.header .p_txt{
  font-size: 36rpx;
  color: #666;
  line-height:80rpx;
}
.money-field .zan-field__title{
  font-size: 36px;
  min-width:30px;
  text-indent: -20rpx;
  padding-right: 0 !important;
  font-weight: bold;
  color: #333
}
.money-field .zan-field__input{
  font-size: 56rpx;
  /* transform: scale(1.2); */
