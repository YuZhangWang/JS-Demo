}
.zan-field--wrapped .zan-field__placeholder{
  font-size: 42rpx;
  font-weight: normal;
  color: #CCC;
}
.zan-cell:not(.zan-field){
  padding:32rpx 0 !important;
}
.zan-cell--access{
  padding: 6rpx 0 !important;
}
.cell-text{
  font-size: 26rpx;
  color: #333;
}
.remark_cont .zan-field__input{
  color: #999;
  font-size: 32rpx;
}
.enableDepositItem, .enableItem{
  display: flex;
  justify-content: space-between;
}
.enableDeposit, .enableRow{
  display:flex;
  align-items:center;
}
.enableDepositVal, .enableVal{
  margin-right:10rpx;
}
.zan-switch,.zan-switch__bg {
  width:42px !important;
  height:22px !important;
}
.zan-switch__circle {
  width:20px !important;
  height:20px !important;
  top: 2rpx !important;
}

.itemBorderBot{
  border-bottom:1rpx solid #F2F2F2;margin-top:0;
}
.remark_cont .zan-cell--access{
  height: 54px;
}
