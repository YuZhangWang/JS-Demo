  font-size: 28rpx !important;
  color: #666666 !important;
}
.remarkInput{
  margin-left: 100rpx;
  width: 70%;
}

.zan-field--wrapped{
  margin-bottom: 20rpx;
  border:none;
  border-bottom: 1rpx solid #F2F2F2;
  padding-left: 10rpx;
  border-radius:0 !important;
  margin: 0 !important;
  font-size: 56rpx !important;
