/* pages/chargeRecord/chargeRecord.wxss */
page{
  background: #f8f8f8;

}
.userInfo{
  background: #fff;
  display: flex;
  padding: 30rpx 0;
  padding-left: 50rpx;
  align-items: center;
  margin-top: 10px;
  margin-bottom: 10px;
}
.rightInfo{
  margin-left: 20rpx;
}
.avator{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
 
}
.nickName{
  color: #000;
  font-size: 18px;
  
}
.section{
  display:flex;
  align-items:center;
  height:60px;
  background:white;
  width:100%;
  padding:0px 50rpx;
  margin-bottom: 10px;


}
.section .section-left{
  width: 30%;
}
.section .section-right{
  width: 70%;
  display: flex;
}
.section1{
  display: flex;
  height: 90px;
  width: 100%;
  align-items: center;
  background: white;
  margin-bottom: 10px;
}
.section1 .section1-item{
  margin: 0 auto;
  width: 33.33%;
  text-align: center;
}
.section1 .section1-item:nth-child(2){
  border-right: 1px solid #e4e4e4;
  border-left: 1px solid #e4e4e4;

}
.section1 .section1-item text{
  font-size: 40rpx;
  color: rgb(134, 215, 226)
}
.section1 .section1-item view {
  font-size: 32rpx;
  color: #999
}
.section2{
   display: flex;
  height: 50px;
  width: 100%;
  align-items: center;
  background: white;
  margin-bottom: 10px;
}
.section2 .tab-item{
  width:33.33%;
  text-align:center;
  height:50px;
  line-height:50px;
}
.active{
  border-bottom:2px solid red;
  color:red;
}
.itemlist{
  height: 100%;
  width: 100%;
  
 
}
.list{
  padding: 5rpx;
  margin-bottom: 10px;
  background: white;
}
.list view:nth-child(1){
 padding: 5px 10px;
 font-size: 32rpx;
}
.list view:nth-child(2){
  color: #999;
  font-size: 28rpx;
  padding: 0px 10px;
}
