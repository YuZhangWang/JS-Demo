/* pages/queue/queueList.wxss */
.queueTypeList{
  width: 100%;
}
.queueTypeList .queueTypeItem{
  display: flex;
  padding: 15rpx 0;
  
}
.queueTypeList .queueTypeItem .qtCnt{
  width: 30%;
  display: inline-flex;
  justify-content: center;
  align-items: center;

}

.queueTypeList .queueTypeItem  .info{
  flex-direction: column;
}
.queueTypeList .queueTypeItem  .desc{
  font-size: 12px;
  color: #626262;
}
.queueTypeList .queueTypeHeader{
  background: #f0f0f0;
  
}
.queueTypeList .selRow{
  display: inline-block;
  /* width: 50rpx; */
  font-size: 22px;
  margin-left: 15rpx;
}
.queueTypeList .queueTypeBody{
  border-bottom: 1px solid #f7f7f7;
}
.waitCount{
  /* color: #f25959; */
  font-size: 20px;
  margin-right: 5rpx;
}
.queueTypeList .passTips{
 padding: 27rpx 25rpx;
 font-size: 13px;
 color: #ccc;
}
.botQueueBlock{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
}
.botForm{
  display: flex;
  width: 100%;
  height: 100rpx;
  justify-content: flex-end;
  border-top: 1px solid #f2f2f2;
}
.rightNowGet{
  margin: 0;
  margin-left:0;
  margin-right:0;
  padding: 0;
  display: inline-block;
  border-radius: 0;
  height: 100rpx;
  width: 250rpx;
  line-height: 100rpx;
}
.stopOnline{
  background: #C9C9C9;
  color: #fff;
}