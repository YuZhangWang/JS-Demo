.huaer-field_picker{flex:1;padding:10px 4px;font-size:28rpx;border: 1px solid #e4e4e4;position: relative;border-radius: 5px;}
.huaer-field_placeholder{font-size:28rpx;color: #999;}
.huaer-field_input-right{text-align:right}
.form_title_box{padding:8rpx 20rpx;margin-bottom: 20rpx;}
