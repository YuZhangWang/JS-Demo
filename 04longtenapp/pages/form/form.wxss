.huaer-panel {background:#fff;border-top:solid 9.45rpx #eee;overflow:hidden;}
.huaer-cell{position:relative;padding:12px 15px;display:flex;line-height:1.4;font-size:14px;flex-direction: column}
.huaer-cell::after{position:absolute;left:15px;right:0;bottom:0;background:#e5e5e5;content:' '}
