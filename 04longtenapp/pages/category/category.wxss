@import "../detail/detail.wxss";
page {
  height: 100%;
}
.loadmore{
  text-align: center;
  background: white;
  padding: 10rpx 0;
}
.header{
  padding: 0 10px;
  font-size: 16px;
  height: 44px;
  line-height: 44px;
  border-bottom: 1px solid #ddd;
  background-color: #EFEFEF;
  position: relative;
}
.header text{
    font-size: 16px;
}
.list_cont{
    border-top: solid 1px #DDD;
    margin-bottom: 10px;
    background-color: white;
    margin-top: -1px;
    overflow:scroll;
    height: 100%;
}
.category_item{
  min-height:20px;
  line-height:20px;
  border-bottom:solid 1px #f5f7f7;
  position:relative;
  margin: 0 30rpx;
}
.category_item .nav{
  
  height:60px;
  position:relative;
}
.category_item .nav .trigger{
  content:"\020";
  display:block;
  width:18px;
  height:18px;
  background-image:url("http://res.xcx.weijuju.com/image/mobile/trigger_right.png");
  background-size:100%;
  position:absolute;
  right:10px;
  top:50%;
  margin-top: -9px;
}
.category_item .t1{
  
  padding-top:10px;
  margin-left:10px;
  display:block;
  padding-bottom:5rpx;
  font-size:32rpx;
  font-family:Source Han Sans CN;
  font-weight:400;
  color:rgba(54,58,61,1);

}
.category_item .t2{
 
    font-size:24rpx;
    font-family:Source Han Sans CN;
    font-weight:400;
    color:rgba(171,174,179,1);
    margin-left: 10px;
    text-overflow: ellipsis;
    display: inline-block;
    overflow: hidden;
    white-space: nowrap;
    max-width: 650rpx;
}

.search-cont{
  margin: 0;
  border: 0;
  /* box-shadow: 0 0 7px rgba(0, 0, 0, 0.1); */
  width: 100%;
  position: relative;
  z-index: 4;
  flex:0 0 35px;
}
.search-cont .search-btn{
  margin-right: 5px;
}
.search-cont .search-input{
  font-size: 24rpx;
}
.category-tab-content{
  flex:1 1;
}
.category-tab-style-left {
  height: 93%;
}
.category-tab-content .category-tab-style-left .type-tab{
  background: #F5F7F7;
}

.type-4 
.category-tab-content .category-tab-style-left .cat-box{
  height: 50px;
  margin-bottom: 1px;
  border-bottom: 0;
}
.sub-cat-cont{
  padding: 20rpx 25rpx;
}
.sub-cat-cont .cat-name{
  line-height: 76rpx;
  margin-bottom: 4rpx;
  text-align: center;
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: center;
  
}
.cat-name-txt{
  margin: 0 20rpx;
  max-width: 115px;
  overflow: hidden;
  white-space: nowrap;
  height: 40px;
  line-height: 40px;

}
.sub-cat-cont .subcat-list,.sub-cat-cont .subcat-list-4{
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
}
.sub-cat-cont .subcat-list-4{
 margin-bottom: -30rpx;
}
.sub-cat-cont .subcat-list-5{
  background-color: #fff;
  display: flex;
  flex-wrap: nowrap;
  margin: 0 20rpx;
}
.sub-cat-cont .subcat-list .subcat-item{
  /* flex: 0 0 100rpx; */
  /* margin-right: 30rpx; */
  /* text-align: center; */
  /* margin-top: 20rpx; */
  width: 33%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}
.sub-cat-cont .subcat-list-4 .subcat-item{
  text-align: center;
  padding: 0 10rpx;
  margin:15rpx 10rpx;
  background: #f6f6f7;
  border-radius: 24px;
  width: 25%;
  white-space: nowrap;
  overflow: hidden;
  height: 50rpx;
  line-height: 50rpx;
  text-overflow: ellipsis;
  font-size:24rpx;
  font-family:Source Han Sans CN;
  font-weight:400;
  color:rgba(86,92,100,1);
  border: 1px solid #fff;


}
.sub-cat-cont .subcat-list-5 .subcat-item{
  text-align: center;
  padding: 0 10rpx;
  margin-right: 30rpx;
  background: #f6f6f7;
  border-radius: 24px;
  flex: 0 0 20%;
  white-space: nowrap;
  overflow: hidden;
  height: 50rpx;
  line-height: 50rpx;
  text-overflow: ellipsis;
  font-size:24rpx;
  font-family:Source Han Sans CN;
  font-weight:400;
  color:rgba(86,92,100,1);
  border: 1px solid #fff;

}

.sub-cat-cont .subcat-item image{
  width: 90rpx;
  height: 90rpx;
}

.sub-cat-cont .subcat-list .subcat-item .subcat-name{
  font-family:Source Han Sans CN;
  font-weight:400;
  font-size: 24rpx;
  line-height: 40rpx;
  white-space: nowrap;
  overflow: hidden;
  margin-top: 10rpx;
  max-width: 122rpx;
  text-align: center;
  text-overflow: ellipsis;
  
}
.product-tab{
  background-color: #FFF;
  border-top: 1px solid #f5f7f7;
}

.left-line,.right-line{
  height: 2px;
  flex: 0 0 50px;
  background: #f5f7f7;

}
.sublist_cont{
  padding-left: 0px;
}
.show_sublist>.nav .trigger{
  transform: rotate(90deg);
}
.category_item .sublist_cont .nav{
  height: 40px;
  border-top:solid 1px #f2f2f2;
  padding-left:20px; 
  background-color: #f5f7f7;
}
.category_item .sublist_cont .nav .t1{
  font-size: 14px;
  padding-top: 11px;
}
.category_item .sublist_cont .nav .trigger{
  top: 12px;
}
.category-tab-style-top{
  overflow: auto;
}
.category-tab-style-top .product-tab{
  flex: 1 1;
  overflow: auto;
  max-height: auto;
}
.category-tab-style-top .product-tab-5{
  flex: 1 1;
  overflow: auto;
  max-height: auto;
  padding: 10rpx 0;
  border-bottom: 6px solid #efefef;
}
.product-tab-5 .sub-cat-cont{
  margin: 0;
  padding: 20rpx;
}

.category-tab-content .empty-text{
  margin-top: 0px;
  font-size: 12px;
  padding-top: 0px;
  color: #949494;
  line-height: 40px;
}
.category-tab-style-left .tab-item{
  background: none;
  padding:0rpx;
  box-sizing: border-box;
  border-top: 1px solid #f5f7f7;
}
.category-tab-style-top .tab-item{
  background: none;
  padding:15rpx 10rpx;
  box-sizing: border-box;
  border-top: 1px solid #f5f7f7;
}
.product-tab-4 .tab-item{
  border: none !important;
  padding: 0 10rpx;
}
.category-tab-style-top .food-item-inner{
  padding: 20rpx 0;
}
.category-tab-content .food-item{
  background: #fff;
}
.category-tab-style-top .food-item-img{
  width: 200rpx;
  height: 200rpx;
}
.category-tab-style-left .food-item-img{
  width: 160rpx;
  height: 160rpx;
}

.category-tab-content .food-item .goods-buy{
  position: absolute;
}
.category-tab-content .food-item .goods-buy.btn1 {
    
    right:10rpx;
    bottom:10rpx;
    width:33rpx;
    height: 35rpx;
    color: #F44;
    font-size: 19px;
    z-index: 2;
}